# Environment Variables Example
# 이 파일을 복사하여 .env.development 또는 .env.production으로 사용하세요.
#
# 사용법:
#   개발 환경: Copy-Item .env.example .env.development
#   프로덕션: Copy-Item .env.example .env.production

# 서버 설정
NODE_ENV=development
PORT=5001
HOST=0.0.0.0

# 데이터베이스 (Neon)
DATABASE_URL=your_database_url_here

# MySQL/RDS 데이터베이스
DB_HOST=your_db_host_here
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here
DB_NAME=your_db_name_here
DB_PORT=3306

# JWT 및 세션 보안
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters
SESSION_DOMAIN=   # 프로덕션에서만 설정 (예: maegeul.com)

# OpenAI API (감정 분석)
OPENAI_API_KEY=your_openai_api_key_here

# CORS 설정
# Development: http://localhost:3000
# Production: https://your-project.vercel.app (쉼표로 구분하여 여러 URL 추가 가능)
CORS_ORIGINS=http://localhost:3000

# 클라이언트 베이스 URL
# Development: http://localhost:3000
# Production: https://your-project.vercel.app
CLIENT_BASE_URL=http://localhost:3000

# 배포 모드 설정
# API 전용 모드: false 또는 설정 안 함 (기본값)
# 통합 모드 (서버가 클라이언트 빌드 파일 서빙): true
SERVE_CLIENT_STATIC=false

# Vercel Blob Storage (파일 업로드용)
# Vercel 대시보드에서 Blob Storage를 생성하고 토큰 가져오세요
# https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=your_blob_read_write_token_here

# 카카오 OAuth (선택사항)
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# 서버 호스트 (프로덕션에서만 필요)
# Render 사용 시 RENDER_EXTERNAL_HOSTNAME이 자동으로 설정됨
# SERVER_HOST=your-app-name.onrender.com
